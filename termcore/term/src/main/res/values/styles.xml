<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- "TermOne Plus" "Dark" theme(default) -->
    <style name="BaseAppTheme" parent="Theme.AppCompat">
        <!-- color for the appbar and other primary UI elements -->
        <item name="colorPrimary">#607D8B</item><!--Blue Gray 50, 500-->
        <!-- a darker variant of the primary color, used for the status bar
        (on Android 5.0+, API level 21) and contextual app bars -->
        <item name="colorPrimaryDark">#455A64</item><!--Blue Gray 50, 700-->
        <!-- a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">#8BC34A</item><!--Light Green 50, 500-->
        <!-- custom application attributes -->
        <item name="colorPrimaryLight">#78909C</item><!--Blue Gray 50, 400-->
        <!-- indirect reference to text color to avoid lint error
        "Using theme reference in XML drawables requires API level 21" -->
        <item name="themeTextColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- "TermOne Plus" "Light" theme -->
    <style name="BaseAppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#90A4AE</item><!--Blue Gray 50, 300-->
        <item name="colorPrimaryDark">#78909C</item><!--Blue Gray 50, 400-->
        <item name="colorAccent">#AED581</item><!--Light Green 50, 300-->
        <item name="colorPrimaryLight">#B0BEC5</item><!--Blue Gray 50, 200-->
        <item name="themeTextColor">?android:attr/textColorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!-- "TermOne Plus" "DayNight" theme(system) -->
    <style name="BaseAppTheme.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">#607D8B</item><!--Blue Gray 50, 500-->
        <item name="colorPrimaryDark">#455A64</item><!--Blue Gray 50, 700-->
        <item name="colorAccent">#8BC34A</item><!--Light Green 50, 500-->
        <item name="colorPrimaryLight">#78909C</item><!--Blue Gray 50, 400-->
        <item name="themeTextColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- actual "Dark" theme overridden at API level -->
    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <!-- actual "Light" theme overridden at API level -->
    <style name="AppTheme.Light" parent="BaseAppTheme.Light"/>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <!-- actual "DayNight" theme overridden at API level -->
    <style name="AppTheme.DayNight" parent="BaseAppTheme.DayNight"/>

    <style name="AppTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <!-- style used in "AddShortcut" activity -->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>
