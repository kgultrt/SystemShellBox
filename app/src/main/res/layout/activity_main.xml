<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 统一头部区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 动态路径显示 -->
            <TextView
                android:id="@+id/tv_current_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="start"
                android:paddingVertical="2dp" />

            <!-- 统一菜单按钮 -->
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/menu"
                android:padding="6dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu" />
        </LinearLayout>

        <!-- 统一存储信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <!-- 全局存储进度条 -->
            <ProgressBar
                android:id="@+id/progressBar_storage"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#D3D3D3" />
        </LinearLayout>
    </LinearLayout>

    <!-- 双窗口主体 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:divider="@drawable/divider_vertical"
        android:showDividers="middle">

        <!-- 左窗口 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_files_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:paddingVertical="8dp"
            android:requiresFadingEdge="vertical" />

        <!-- 左窗口加载进度 -->
        <ProgressBar
            android:id="@+id/progressBar_left"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="gone"
            android:progressTint="#4CAF50" />

<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_files_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:paddingVertical="8dp"
        android:requiresFadingEdge="vertical"/>

        <!-- 右窗口加载进度 -->
        <ProgressBar
            android:id="@+id/progressBar_right"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="gone"
            android:progressTint="#FF9800" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_files_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:paddingVertical="8dp" />
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>