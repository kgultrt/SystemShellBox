<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:material="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:ellipsize="start"
                android:id="@+id/tv_current_path"
                android:paddingTop="2.0dip"
                android:paddingBottom="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1.0"
                android:paddingVertical="2.0dip" />
            <ImageButton
                android:id="@+id/btn_menu"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="6.0dip"
                android:layout_width="36.0dip"
                android:layout_height="36.0dip"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="@string/menu" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip">
            <TextView
                android:textSize="10.0sp"
                android:id="@+id/tv_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:id="@+id/progressBar_storage"
                android:layout_width="0.0dip"
                android:layout_height="2.0dip"
                android:layout_weight="1.0"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:baselineAligned="false"
        android:layout_weight="1.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files_left"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:scrollbars="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingVertical="8.0dip" />
        </LinearLayout>
        <View
            android:background="#ffe0e0e0"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files_right"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:scrollbars="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingVertical="8.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sync"
            android:text="@string/sync"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:icon="@drawable/ic_sync"
            android:padding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create"
            android:text="@string/create_dialog"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:icon="@drawable/ic_create"
            android:padding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bookmark_history"
            android:text="@string/bookmark"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:icon="@drawable/ic_bookmark"
            android:padding="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:text="@string/back_lastdir"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:icon="@drawable/ic_back"
            android:padding="4dp" />
    </LinearLayout>
</LinearLayout>